{
  "name": "extension",
  "displayName": "Extension",
  "version": "0.0.1",
  "description": "VocabulAI extension.",
  "author": "novice",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.29.2",
    "lucide-react": "^0.563.0",
    "plasmo": "0.90.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "3.4.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "alias": {
    "react": "./node_modules/react/index.js",
    "react-dom": "./node_modules/react-dom/index.js"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "http://localhost:3000/*",
      "https://vocabulai.vercel.app/*"
    ],
    "permissions": [
      "contextMenus",
      "storage",
      "cookies",
      "scripting"
    ],
    "commands": {
      "ask-vocabulai": {
        "suggested_key": {
          "default": "Alt+V",
          "mac": "Alt+V"
        },
        "description": "Ask VocabulAI"
      }
    }
  }
}
